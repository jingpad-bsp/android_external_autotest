AUTHOR = "jwerner, chromeos-power"
NAME = "power_SuspendStress.bareDaily"
SUITE = "kernel_daily_regression"
PURPOSE = "Run repeated iterations of suspend/resume to find rare errors."
TIME = "LENGTHY"
TEST_CATEGORY = "Functional"
TEST_CLASS = "power"
TEST_TYPE = "client"
EXPERIMENTAL = "True"

DOC = """
Runs 1.5 hours of bare suspend/resume cycles without additional workload.
Follows this by a few short checks to make sure the system is still in a good
state (work in progress, feel free to add some more).
"""

job.run_test('power_SuspendStress', duration=(60 * 60 * 1.5), tag='bareDaily')

job.run_test('hardware_EC', tag='power_SuspendStress')
job.run_test('login_LoginSuccessTelemetry', tag='power_SuspendStress')
job.run_test('hardware_TPMCheck', tag='power_SuspendStress')
job.run_test('audiovideo_Aplay', tag='power_SuspendStress')
