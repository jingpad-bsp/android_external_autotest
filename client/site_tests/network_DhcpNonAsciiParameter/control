AUTHOR = "ChromeOS Team"
NAME = "network_DhcpNonAsciiParameter"
PURPOSE = "Verify DHCP negotions can succeed with non-ASCII DHCP parameters"
SUITE = "bvt, network_nightly"
CRITERIA = """
This test fails if dhcpcd is unable to negotiate and renew a DHCP lease
if the server returns a string parameter with non-ASCII parameters, which
need to be sanitized before sending to DBus.
"""
TIME = "SHORT"
TEST_CATEGORY = "Functional"
TEST_CLASS = "network"
TEST_TYPE = "client"

DOC = """
  Tests that we can negotiate a lease on an IPv4 address via DHCP.

"""

job.run_test('network_DhcpNonAsciiParameter')
