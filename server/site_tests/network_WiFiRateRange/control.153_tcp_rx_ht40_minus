AUTHOR = "tgao@chromium.org"
NAME = "WiFi RateRange"
SUITE = 'wifirvr'
TIME = "LONG"
TEST_TYPE = "Server"

DOC = """
WiFiRateRange is a suite of 3-machine tests to benchmark throughput under
varying attenuation level. This test requires special hardware to run.

Runs TCP downstream test on Channel 153 HT40-.
"""

from autotest_lib.server import site_wifitest


def run_server_tests(machine):
  site_wifitest.run_test_dir("network_WiFiRateRange", job,
                             ['config_file=wifi_attenuator_config',
                              'test_pat=153_tcp_rx_ht40_minus'], machine)


parallel_simple(run_server_tests, machines)
