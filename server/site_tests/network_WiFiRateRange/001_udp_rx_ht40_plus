# Rate vs. Range test over an open 802.11n connection w/ power save disabled.
# UDP Rx/downstream on channel 1 HT40+ using Stumpy as AP.
# UDP provides a measure of 'raw' wifi performance.

{ "name":"001_udp_rx_ht40_plus",
  "steps":[
    [ "create",         { "type":"hostap" } ],

    # Initialize ports #0 and #1
    [ "init_va",        { "va_port":"0" } ],
    [ "init_va",        { "va_port":"1" } ],

    [ "config",         { "channel":"2412", "ht40+": None, "puren":None } ],
    [ "connect",        { "security":"none" } ],

    [ "client_powersave_off" ],
    # Expect possible connection failure in higher attenuation. Safe to ignore.
    [ "~rvr_test",       { "proto":"udp",
                           "fixed_atten":"48",
                           "start_atten":"60",
                           "end_atten":"98",
                           "test_time":"60" } ],
    [ "destroy" ],
  ],
}
