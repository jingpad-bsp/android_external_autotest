AUTHOR = "Chrome OS Team"
NAME = "firmware_CorruptA"
PURPOSE = "Servo based firmware A corruption test"
CRITERIA = "This test will fail if firmware verification mis-behaved"
TIME = "LONG"
TEST_CATEGORY = "Functional"
TEST_CLASS = "firmware"
TEST_TYPE = "server"

DOC = """
This test corrupts firmware A and checks the next boot results.
"""

def run_corrupta(machine):
    host = hosts.create_host(machine)
    job.run_test("firmware_CorruptFwA", host=host, cmdline_args=args,
                 use_faft=True, disable_sysinfo=True)

parallel_simple(run_corrupta, machines)
