AUTHOR = "Chrome OS Team"
NAME = "platform_CloseOpenLid"
PURPOSE = "Test suspend/resume in response to lid events."
TIME = "LONG"
TEST_CATEGORY = "Functional"
TEST_CLASS = "platform"
TEST_TYPE = "server"

DOC = """
This test uses servo to simulate lid close and open events. Device state is
verified by pinging."""

def run(machine):
    host = hosts.create_host(machine, require_servo=True)
    job.run_test("platform_CloseOpenLid", host=host, cmdline_args=None,
                 disable_sysinfo=True)

parallel_simple(run, machines)
